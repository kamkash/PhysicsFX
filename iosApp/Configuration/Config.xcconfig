TEAM_ID=

PRODUCT_NAME=PhysicsFX
PRODUCT_BUNDLE_IDENTIFIER=app.kamkash.physicsfx.PhysicsFX$(TEAM_ID)

CURRENT_PROJECT_VERSION=1
MARKETING_VERSION=1.0

// Link against the Rust physics_core STATIC library (.a)
// Use the device or simulator path based on target
// Force static linking by specifying the full path to the .a file
LIBRARY_SEARCH_PATHS[sdk=iphoneos*] = $(inherited) $(SRCROOT)/../physics_core/target/aarch64-apple-ios/release
LIBRARY_SEARCH_PATHS[sdk=iphonesimulator*] = $(inherited) $(SRCROOT)/../physics_core/target/aarch64-apple-ios-sim/release

// Use -force_load to ensure the static library is linked (not the dylib)
OTHER_LDFLAGS[sdk=iphoneos*] = $(inherited) -force_load $(SRCROOT)/../physics_core/target/aarch64-apple-ios/release/libphysics_core.a
OTHER_LDFLAGS[sdk=iphonesimulator*] = $(inherited) -force_load $(SRCROOT)/../physics_core/target/aarch64-apple-ios-sim/release/libphysics_core.a